<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="sales_order" resource="sales" comment="Sales Flat Order Address">
        <column xsi:type="int" name="ac_order_sync_id" nullable="false" default="0" comment="ActiveCampaign Order Id"/>
        <column xsi:type="int" name="ac_order_sync_status" nullable="false" default="0" comment="ActiveCampaign Status"/>
    </table>
    <table name="sales_order_grid" resource="sales" engine="innodb" comment="Sales Flat Order Grid">
        <column xsi:type="int" name="ac_order_sync_id" nullable="false" default="0" comment="ActiveCampaign Order Id"/>
        <column xsi:type="int" name="ac_order_sync_status" nullable="false" default="0" comment="ActiveCampaign Status"/>
    </table>
</schema>
