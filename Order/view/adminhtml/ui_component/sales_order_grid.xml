<?xml version="1.0" encoding="UTF-8"?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <listingToolbar name="listing_top">
        <massaction name="listing_massaction">
            <action name="order_sync">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="type" xsi:type="string">order_sync</item>
                        <item name="label" xsi:type="string" translate="true">Sync to ActiveCampaign</item>
                        <item name="url" xsi:type="url" path="ordermass/order/masssync"/>
                        <item name="confirm" xsi:type="array">
                            <item name="title" xsi:type="string" translate="true">Sync Order(s)</item>
                            <item name="message" xsi:type="string" translate="true">Are you sure you wan\'t to sync selected items?</item>
                        </item>
                    </item>
                </argument>
            </action>
        </massaction>
    </listingToolbar>
    <columns name="sales_order_columns">
        <column name="ac_order_sync_status" class="ActiveCampaign\Order\Ui\Component\Listing\Column\OrderStatus">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="visible" xsi:type="boolean">true</item>
                    <item name="label" xsi:type="string" translate="true">ActiveCampaign Sync Status</item>
                </item>
            </argument>
        </column>
    </columns>
</listing>
