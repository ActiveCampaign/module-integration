<?xml version="1.0" encoding="UTF-8"?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <listingToolbar name="listing_top">
        <massaction name="listing_massaction" component="Magento_Ui/js/grid/tree-massactions">
            <action name="ac_sync">
                <settings>
                    <confirm>
                        <message translate="true">Are you sure you want to sync the selected customers in the ActiveCampaign?</message>
                        <title translate="true">Sync</title>
                    </confirm>
                    <url path="activecampaign_customer/Customer/MassSync"/>
                    <type>sync</type>
                    <label translate="true">Sync to ActiveCampaign</label>
                </settings>
            </action>
        </massaction>
    </listingToolbar>
    <columns name="customer_columns" class="Magento\Customer\Ui\Component\Listing\Columns">
        <column name="ac_sync_status" class="ActiveCampaign\Customer\Ui\Component\Listing\Column\AcSyncStatus" sortOrder="300">
            <settings>
                <dataType>select</dataType>
                <label translate="true">ActiveCampaign Sync Status</label>
                <visible>true</visible>
            </settings>
        </column>
    </columns>
</listing>
